<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50"
      AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50"
      xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.itis.inf301.semestrovka2.controller.pages.ConnectToLobbyPageController">
    <Text text="Введите код лобби" styleClass="connect-to-lobby-label"/>
    <TextField fx:id="textField" styleClass="input-field" promptText="123456"/>
    <HBox fx:id="errorContainer"/>
    <Button mnemonicParsing="false" styleClass="primary-button" onAction="#connect" text="Подключиться"/>
    <Button mnemonicParsing="false" styleClass="primary-button" onAction="#back" text="Назад"/>
</VBox>
